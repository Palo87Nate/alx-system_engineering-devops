#!/usr/bin/env bash
# Script that configure HAproxy on your lb-01 server.

apt-get update
apt-get install -y haproxy
cp /etc/haproxy/haproxy.cfg /etc/haproxy/haproxy.cfg.default
echo "
listen 19018-lb-01
        bind *:80
        mode http
        balance roundrobin
        option httpclose
        option forwardfor
        server 19018-web-01 54.84.225.123 check
        server 19018-web-02 34.202.164.77 check
" >> /etc/haproxy/haproxy.cfg
service haproxy restart
